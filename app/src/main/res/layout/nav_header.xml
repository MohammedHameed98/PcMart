<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/navHeader">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/iconfinder_square_facebook_317727"
            android:id="@+id/mg_userImage_nav_head"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="Edit My Profile"
              android:inputType="text"
              android:textColor="@color/colorWhite"
              android:fontFamily="@font/montserrat"
              android:textSize="18sp"
              android:id="@+id/tv_edit_nav_head"
              app:layout_constraintTop_toBottomOf="@+id/mg_userImage_nav_head"
              android:layout_marginTop="36dp"
              app:layout_constraintStart_toStartOf="@+id/mg_userImage_nav_head"/>
    <TextView
            android:text="Mohammed Hameed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_userName_nav_head"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/mg_userImage_nav_head"
            app:layout_constraintTop_toTopOf="@+id/mg_userImage_nav_head"
            app:layout_constraintStart_toEndOf="@+id/mg_userImage_nav_head" android:layout_marginStart="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>