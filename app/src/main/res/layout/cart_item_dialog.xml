<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/mg_cart_image_dialog"
            android:background="@drawable/ic_iconfinder_youtube_317714"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M.B Msi B450 Gaming plus AMD"
            android:id="@+id/tvName_cart_dialog"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@id/mg_cart_image_dialog"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"

    />
    <TextView
            android:text="100$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice_cart_dialog"
            android:layout_below="@id/tvName_cart_dialog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:textColor="#690503"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"

    />
</RelativeLayout>