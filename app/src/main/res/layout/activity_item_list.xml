<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ItemListActivity"
        android:id="@+id/darwerLayout"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/curve_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/toolbar"
                android:minHeight="100dp"/>

        <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="55dp" android:fillViewport="true"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:id="@+id/sv_buttons">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <ToggleButton
                        android:inputType="text"

                        android:textColor="@color/colorWhite"
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="GPU"
                        android:textOn="GPU"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_height="50dp" android:id="@+id/GPU_Button"
                        android:layout_marginRight="2dp"
                        android:checked="false"/>
                <ToggleButton
                        android:inputType="text"

                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="CPU"
                        android:textOn="CPU"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:layout_height="50dp" android:id="@+id/CPU_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:inputType="text"

                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="RAM"
                        android:textOn="RAM"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_height="50dp" android:id="@+id/RAM_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:inputType="text"

                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="HDD"
                        android:textOn="HDD"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_height="50dp" android:id="@+id/HDD_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:inputType="text"

                        android:text="ToggleButton"
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="SSD"
                        android:textOn="SSD"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_height="50dp" android:id="@+id/SSD_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:inputType="text"

                        android:text="ToggleButton"
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="M.B"
                        android:textOn="M.B"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_height="50dp" android:id="@+id/MotherBoard_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:inputType="text"

                        android:text="ToggleButton"
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="PSU"
                        android:textOn="PSU"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_height="50dp" android:id="@+id/PSU_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:inputType="text"

                        android:text="ToggleButton"
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="Cooler's"
                        android:textOn="Cooler's"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_height="50dp" android:id="@+id/Cooler_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:inputType="text"

                        android:text="ToggleButton"
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="Case"
                        android:textOn="Case"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="50dp" android:id="@+id/Case_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:inputType="text"

                        android:text="ToggleButton"
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="Monitor"
                        android:textOn="Monitor"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="50dp" android:id="@+id/Monitor_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:inputType="text"
                        android:text="ToggleButton"
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="Mouse"
                        android:textOn="Mouse"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="50dp" android:id="@+id/Mouse_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:textOff="UPS"
                        android:textOn="UPS"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="50dp" android:id="@+id/UPS_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>
                <ToggleButton
                        android:background="@drawable/grey_togglebutton"
                        android:layout_width="100dp"
                        android:inputType="text"
                        android:textOff="Accessories"
                        android:textOn="Accessories"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="50dp" android:id="@+id/Accessories_Button"
                        android:layout_marginRight="2dp" android:checked="false"/>

            </LinearLayout>
        </HorizontalScrollView>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/sv_buttons"
                app:layout_constraintHorizontal_bias="0.5"
                android:id="@+id/rv_itemList"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="0.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:id="@+id/nav_view">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <include layout="@layout/nav_header"/>
            <include layout="@layout/nav_body_layout"/>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>